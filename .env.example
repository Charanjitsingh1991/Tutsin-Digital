# Application
NODE_ENV=production
PORT=5000

# Storage selection
# Set to true to use PostgreSQL storage (Drizzle + pg)
USE_DB=true

# Database (Supabase Postgres example)
# Replace with your Supabase connection string from Project Settings → Database → Connection string → URI
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:6543/postgres?sslmode=require
# For managed DBs (Supabase/Neon), keep this true to enable TLS in pg Pool
DATABASE_SSL=true